<Window x:Class="Lab_06_07_OOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:Lab_06_07_OOP.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1253" MinWidth="1050" FontSize="18" FontFamily="Times New Roman" VerticalAlignment="Bottom" HorizontalAlignment="Right" MinHeight="400">
    <Window.CommandBindings>
        <CommandBinding Command="ui:WindowCommands.Info" Executed="Button_Info_Product_OnClick" />
        <CommandBinding Command="ui:WindowCommands.Add" Executed="Button_Add_Product_OnClick" />
    </Window.CommandBindings>
    <Grid Grid.IsSharedSizeScope="True" Margin="0,0,0,0">

        <!-- split into lines main menu-->
        <Grid.RowDefinitions>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition Height="55px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40px"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- menu account -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="20"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="1"  VerticalAlignment="Center" Source="img/interface/user.png" />
            <Button Grid.Column="2" Content="My account ▽" FontSize="15" Background="White" BorderBrush="White"/>
            <Button Grid.Column="3" x:Name="ButtonAddProduct" Command="ui:WindowCommands.Add" Content="Add product" FontSize="14"/>
        </Grid>

        <!-- navi -->
        <Grid Grid.Row="1" ShowGridLines="True" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"></ColumnDefinition>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="297"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="160"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"  Content="HOME" Background="#FF166FB0" Foreground="White" Cursor="Hand" BorderBrush="White" RenderTransformOrigin="0.5,0.5" ></Button>
            <Button Grid.Column="1"  Content="SHOP" Background="#FF166FB0" Foreground="White" Cursor="Hand" BorderBrush="White" />
            <Button Grid.Column="2"  Content="WARRANTY &amp; RETURNS" Margin="0,0,0.001,0" Background="#FF166FB0" Foreground="White" Cursor="Hand" BorderBrush="White"  />
            <Grid   Grid.Column="3"  Background="#FF166FB0" Height="53">
                <TextBlock Text="" x:Name="outout"></TextBlock>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="4" ShowGridLines="True" Background="#FF166FB0" Height="53">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="45"/>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="45"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="1" Source="img/interface/shopping-cart.png" Width="35" Height="35" VerticalAlignment="Center" HorizontalAlignment="Left" Cursor="Hand"/>
                <Image Grid.Column="3" Source="img/interface/favorite.png" Width="35" Height="35" VerticalAlignment="Center" HorizontalAlignment="Left" Cursor="Hand"/>
            </Grid>
        </Grid>

        <!-- window contents -->
        <Grid Grid.Row="2" Grid.Column="0" Margin="0,10,0,0" ShowGridLines="True">

            <!-- category -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"></ColumnDefinition>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="190"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Background="#FF166FB0" Content="CATEGORIES" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"></Label>
                <Expander Grid.Row="1" MinHeight="30" BorderThickness="1" Background="#FF166FB0" Header="Dell laptops" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White">
                    <StackPanel x:Name="Dell" Background="#F6F6F6" Width="240">
                        <Button Height="30" BorderThickness="1" Content="Latitude E6440" HorizontalAlignment="Left" Width="240"></Button>
                        <Button Height="30" BorderThickness="1" Content="Latitude E5450" HorizontalAlignment="Left" Width="240"></Button>
                        <Button Height="30" BorderThickness="1" Content="Latitude E5440" HorizontalAlignment="Left" Width="240"></Button>
                    </StackPanel>
                </Expander>

                <Label Grid.Row="2" Background="#FF166FB0" Content="CATEGORIES" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"></Label>
                <Expander Grid.Row="2" MinHeight="30" BorderThickness="1" Background="#FF166FB0" Header="Lenovo laptops" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White">
                    <StackPanel x:Name="Lenovo" Background="#F6F6F6" Width="240">
                        <Button Height="30" BorderThickness="1" Content="Latitude E6440" HorizontalAlignment="Left" Width="240"></Button>
                        <Button Height="30" BorderThickness="1" Content="Latitude E5450" HorizontalAlignment="Left" Width="240"></Button>
                        <Button Height="30" BorderThickness="1" Content="Latitude E5440" HorizontalAlignment="Left" Width="240"></Button>
                    </StackPanel>
                </Expander>

                <Label Grid.Row="3" Background="#FF166FB0" Content="CATEGORIES" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"></Label>
                <Expander Grid.Row="3" MinHeight="30" BorderThickness="1" Background="#FF166FB0" Header="HP laptops" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White">
                    <StackPanel x:Name="HP" Background="#F6F6F6" Width="240">
                        <Button Height="30" BorderThickness="1" Content="Latitude E6440" HorizontalAlignment="Left" Width="240"></Button>
                        <Button Height="30" BorderThickness="1" Content="Latitude E5450" HorizontalAlignment="Left" Width="240"></Button>
                        <Button Height="30" BorderThickness="1" Content="Latitude E5440" HorizontalAlignment="Left" Width="240"></Button>
                    </StackPanel>
                </Expander>
            </Grid>

            <!-- Main menu for products-->
            <ScrollViewer Grid.Column="1" x:Name="Scroll" VerticalScrollBarVisibility="Hidden">
                <Grid  Grid.Row="2"  Grid.Column="1" x:Name="GridContent" >
                    <WrapPanel HorizontalAlignment="Center" x:Name="WrapPanelContent">

                         <!--<Border Background="GhostWhite" BorderBrush="Gray" BorderThickness="2"  Margin="10" > 
                            <Grid ShowGridLines="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="230"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="230"/>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>
                                <Image Grid.Row="0" Height="230" Width="230"  Source="D:\University\Labs\OOP part 2\Lab_06-07_OOP\Lab_06-07_OOP\img\laptop\Dell\e.jpg"/>
                                <Button Grid.Row="1" Width="230" Height="40" Content="Latitude E6440" Click="Button_Info_Product_OnClick"/>
                            </Grid>
                         </Border>--> 
                        

                    </WrapPanel>
                </Grid>
            </ScrollViewer>


        </Grid>
    </Grid>


</Window>
